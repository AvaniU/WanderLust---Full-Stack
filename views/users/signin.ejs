<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">SignIn on WanderLust</h1>
    <div class="col-6 offset-3">
        <form action="/signin" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for = "username" class="form-label" id="username">Userame</label>
                <input name="username" placeholder="Enter Username" type="text" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for = "password" class="form-label" id="password">Password</label>
                <input name="password" placeholder="Enter Password" type="text" class="form-control" required>            
            </div>
            <button class="btn btn-success">Sign In</button>
        </form>
    </div>
</div>